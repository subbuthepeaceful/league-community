<div class="form-box">
	<div class="form-box-top">
		<div class="title">
			<h2>Reset Password</h2>
		</div>
	</div>
	<% if flash[:error] %>
		<div class="error-message">
			<%= flash[:error] %>
			<% flash[:error] = nil %>
		</div>
	<% end -%>
	<div class="form-box-bod">
		<div id="login_form" class="circles-form">

			<% form_tag '/logins/reset_password' do -%>
			<div class="form-line">
				<%= label_tag 'email address' %>
				<%= text_field_tag 'email_address', '', :class => "txt", :size => 30 %>
			</div>
			<div class="clear-both">
			</div>
	
			<%= submit_tag 'Reset Password', :class => "ui-state-default ui-corner-all form-submit user-form-submit", :id => "login_submit" %>
			<div class="clear-both">
			</div>
			<% end -%>
		</div>
	</div>
	<div class="form-box-bot">
	</div>
</div>