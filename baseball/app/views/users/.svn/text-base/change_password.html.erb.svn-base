<div class="form-box">
	<div class="form-box-top">
		<div class="title">
			<h2>Please change your password (to something more memorable)</h2>
		</div>
	</div>
	<% if flash[:error] %>
		<div class="error-message">
			<%= flash[:error] %>
			<% flash[:error] = nil %>
		</div>
	<% end -%>
	<div class="form-box-bod">
		<div id="change_password_form" class="circles-form">

			<% form_tag "/users/#{current_user.id}/update_password" do -%>
			<div class="form-line">
				<%= label_tag 'new password' %>
				<%= password_field_tag 'password', '', :class => "txt" %>
			</div>
			<div class="clear-both">
			</div>
			<div class="form-line">
				<%= label_tag 'confirm password' %>
				<%= password_field_tag 'confirm_password', '', :class => "txt" %>
			</div>
			<div class="clear-both">
			</div>
	
			<%= submit_tag 'Update', :class => "ui-state-default ui-corner-all form-submit user-form-submit", :id => "user_update_password" %>
			<div class="clear-both">
			</div>
			<% end -%>
		</div>
	</div>
	<div class="form-box-bot">
	</div>
</div>