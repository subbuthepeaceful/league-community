<div class="grid_16">
  <%= form_for @user, :as => :user, :url => user_registration_path, :html => { :class => "box"} do |f| -%>
  <% if flash[:alert] -%>
    <div class="alert error">
      <span class="icon"></span>
      <strong><%= flash[:alert] %></strong>
    </div>
  <% end -%>
    <div class="header">
      <h2>Sign Up</h2>
    </div>
    <div class="content">
      <div class="row">
        <%= f.label :email %>
        <div>
          <%= f.email_field :email %>
        </div>
      </div>
      <div class="row">
        <%= f.label :password %>
        <div>
          <%= f.password_field :password %>
        </div>
      </div>
      <div class="row">
        <%= f.label :password_confirmation %>
        <div>
          <%= f.password_field :password_confirmation %>
        </div>
      </div>
    </div>
    <div class="actions">
      <div class="left">
      </div>
      <div class="right">
        <%= f.submit "Sign Up" %>
      </div>
    <div>
  <% end -%>
</div>